generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDANT
  IN_PROGRESS
  COMPLETED
}

enum Category {
  INBOX
  TODAY
  UPCOMING
}

model Task {
  id         String     @id @default(uuid())
  title      String     @unique
  content    String
  tags       String[]   @default([])
  project    String     @default("Does not belong to any project")
  created_at DateTime   @default(now())
  due_date   DateTime?
  updated_at DateTime   @updatedAt
  priority   Priority   @default(MEDIUM)
  status     TaskStatus @default(PENDANT)
  category   Category   @default(INBOX)
}
